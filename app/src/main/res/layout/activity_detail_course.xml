<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="Activity.CourseDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="@dimen/detail_label_width"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:hint="Mobile App-C196"
            android:textSize="@dimen/detail_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_edit_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginStart="130dp"
            android:backgroundTint="@color/colorAccent"
            android:src="@drawable/ic_edit"
            app:fabSize="mini"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_start_date_label"
            android:layout_width="@dimen/detail_label_width"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="Start Date"
            android:textSize="@dimen/detail_text_size"
            app:layout_constraintStart_toEndOf="@id/text_view_start_date_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_title" />

        <TextView
            android:id="@+id/text_view_start_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_margin"
            android:layout_marginTop="92dp"
            android:layout_marginEnd="@dimen/text_margin"
            android:text="Start Date"
            android:textSize="@dimen/detail_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/text_view_start_date_label"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_end_label"
            android:layout_width="@dimen/detail_label_width"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="End Date"
            android:textSize="@dimen/detail_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_start_date_label" />

        <TextView
            android:id="@+id/text_view_end_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:layout_marginTop="32dp"
            android:text="End Date"
            android:textSize="@dimen/detail_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/text_view_end_label"
            app:layout_constraintTop_toBottomOf="@+id/text_view_start_date" />

        <TextView
            android:id="@+id/course_detail_status_label"
            android:layout_width="@dimen/detail_label_width"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="Status"
            android:textSize="@dimen/detail_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_end_label" />

        <TextView
            android:id="@+id/text_view_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:layout_marginTop="52dp"
            android:text="In Progress"
            android:textSize="@dimen/detail_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.468"
            app:layout_constraintStart_toEndOf="@+id/course_detail_status_label"
            app:layout_constraintTop_toBottomOf="@+id/text_view_end_date" />

        <TextView
            android:id="@+id/course_detail_term_label"
            android:layout_width="@dimen/detail_label_width"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="Term"
            android:textSize="@dimen/detail_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/course_detail_status_label" />

        <TextView
            android:id="@+id/text_view_term"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:layout_marginTop="52dp"
            android:text="Term List"
            android:textSize="@dimen/detail_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.468"
            app:layout_constraintStart_toEndOf="@+id/course_detail_status_label"
            app:layout_constraintTop_toBottomOf="@+id/text_view_status" />

        <TextView
            android:id="@+id/text_view_note_label"
            android:layout_width="@dimen/detail_label_width"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="Note"
            android:textSize="@dimen/detail_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/course_detail_term_label" />

        <TextView
            android:id="@+id/text_view_note"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:ellipsize="end"
            android:hint="Notes and notes and notes"
            android:lines="3"
            android:maxLines="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_view_note_label"
            app:layout_constraintTop_toBottomOf="@+id/text_view_term" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:backgroundTint="@color/colorAccent"
            android:src="@android:drawable/ic_menu_share"
            app:borderWidth="0dp"
            app:fabSize="mini"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_note_label" />

        <TextView
            android:id="@+id/text_view_share_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:layout_marginTop="16dp"
            android:text="Share Notes"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/fab_share"
            app:layout_constraintStart_toEndOf="@+id/fab_share"
            app:layout_constraintTop_toTopOf="@+id/fab_share" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fab_share" />
        <TextView
            android:id="@+id/mentors_label"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="Mentors"
            android:textSize="@dimen/detail_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/view_course_detail_mentors"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:scrollbars="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mentors_label"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/assessments_label"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="Assessments"
            android:textSize="@dimen/detail_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_course_detail_mentors" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/view_course_detail_assessments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:scrollbars="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/assessments_label"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="494dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>